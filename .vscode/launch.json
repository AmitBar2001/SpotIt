{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: FastAPI (windows)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "python": "${workspaceFolder}/venv/Scripts/python.exe", // Adjust path if your venv is named differently or located elsewhere
      "args": [
        "app.main:app", // Replace 'main:app' with your module and FastAPI instance
        "--reload",
        "--host",
        "127.0.0.1",
        "--port",
        "8000"
      ],
      "console": "integratedTerminal",
      "justMyCode": false // Set to false to debug into third-party libraries
    }
  ]
}
